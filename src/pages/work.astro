---
import Layout from '../layouts/Layout.astro';
import ProjectGrid from '../components/ProjectGrid.astro';
import TagFilter from '../components/TagFilter.astro';

// Import all project data
import sjsuSchedules from '../../data/sjsu-athletics/schedule-posters.json';
import sjsuGameday from '../../data/sjsu-athletics/gameday-content.json';
import sjsuPerformance from '../../data/sjsu-athletics/performance-highlights.json';
import calPerformance from '../../data/cal-football/performance-highlights.json';
import calGameWeek from '../../data/cal-football/game-week-content.json';
import calRecruiting from '../../data/cal-football/recruiting-content.json';
import calNFL from '../../data/cal-football/nfl-draft-content.json';

// Helper function to process projects and subprojects
function processProjects(dataCategory) {
  const allProjects = [];
  
  dataCategory.projects.forEach(project => {
    if (project.subprojects) {
      // Handle projects with subprojects - create individual projects for each subproject
      project.subprojects.forEach(subproject => {
        allProjects.push({
          id: `${project.title.toLowerCase().replace(/\s+/g, '-')}-${subproject.title.toLowerCase().replace(/\s+/g, '-')}`,
          title: `${project.title} - ${subproject.title}`,
          description: `${project.description} - ${subproject.title}`,
          tags: [...new Set(subproject.images.flatMap(img => img.tags || []))],
          images: subproject.images,
          year: 2023,
          featured: false
        });
      });
    } else {
      // Handle flat projects (just images)
      allProjects.push({
        id: project.title.toLowerCase().replace(/\s+/g, '-'),
        title: project.title,
        description: project.description,
        tags: [...new Set(project.images.flatMap(img => img.tags || []))],
        images: project.images,
        year: 2023,
        featured: false
      });
    }
  });
  
  return allProjects;
}

// Combine all projects into one array
const allProjects = [
  ...processProjects(sjsuPerformance),
  ...processProjects(sjsuSchedules),
  ...processProjects(sjsuGameday),
  ...processProjects(calPerformance),
  ...processProjects(calGameWeek),
  ...processProjects(calRecruiting),
  ...processProjects(calNFL)
];

// Get unique tags for filtering
const allTags = [...new Set(allProjects.flatMap(p => p.tags))];

// Featured projects
const featuredProjects = allProjects.filter(p => p.featured);
---

