---
import Layout from '../layouts/Layout.astro';

// Import all project data for collection cards
import sjsuSchedules from '../../data/sjsu-athletics/schedule-posters.json';
import sjsuGameday from '../../data/sjsu-athletics/gameday-content.json';
import sjsuPerformance from '../../data/sjsu-athletics/performance-highlights.json';
import calPerformance from '../../data/cal-football/performance-highlights.json';
import calGameWeek from '../../data/cal-football/game-week-content.json';
import calRecruiting from '../../data/cal-football/recruiting-content.json';
import calNFL from '../../data/cal-football/nfl-draft-content.json';

// Define all collection cards - exact copies from individual work pages
const allCollections = [
  // SJSU Athletics Collections
  { 
    name: "Performance Highlights", 
    data: sjsuPerformance, 
    id: "performance",
    type: "flat",
    workPage: "sjsu-athletics",
    color: "blue"
  },
  { 
    name: "Schedule Posters", 
    data: sjsuSchedules, 
    id: "schedules",
    type: "nested",
    workPage: "sjsu-athletics",
    color: "blue"
  },
  { 
    name: "Gameday Content", 
    data: sjsuGameday, 
    id: "gameday",
    type: "flat",
    workPage: "sjsu-athletics",
    color: "blue"
  },
  // Cal Football Collections
  { 
    name: "Performance Highlights", 
    data: calPerformance, 
    id: "performance",
    type: "flat",
    workPage: "cal-football",
    color: "yellow"
  },
  { 
    name: "Game Week Content", 
    data: calGameWeek, 
    id: "gameweek",
    type: "nested",
    workPage: "cal-football",
    color: "yellow"
  },
  { 
    name: "Recruiting Content", 
    data: calRecruiting, 
    id: "recruiting",
    type: "nested",
    workPage: "cal-football",
    color: "yellow"
  },
  { 
    name: "NFL Draft Content", 
    data: calNFL, 
    id: "nfl-draft",
    type: "flat",
    workPage: "cal-football",
    color: "yellow"
  }
];
---

<Layout title="Work - Jake Barger Portfolio">
  <!-- Hero Section -->
  <section class="bg-gray-900 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">All Work</h1>
        <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
          A comprehensive collection of every project and design work across all categories. Browse the complete portfolio organized by collection.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#collections" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
            View All Collections
          </a>
          <a href="/work/sjsu-athletics" class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-300 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
            SJSU Athletics
          </a>
          <a href="/work/cal-football" class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-300 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
            Cal Football
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Sports Graphic Design Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Sports Graphic Design</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Visual content, campaigns, and photography created for collegiate athletics programs.
        </p>
      </div>
      
      <!-- Project Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <!-- SJSU Athletics Card -->
        <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-lg p-8 text-white">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold">SJSU Athletics</h3>
          </div>
          <p class="text-blue-100 mb-6">
            Comprehensive visual content for 17+ sports teams including schedules, gameday graphics, social media, and photography.
          </p>
          <div class="flex flex-wrap gap-2 mb-6">
            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">Schedule Posters</span>
            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">Gameday Graphics</span>
            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">Photography</span>
            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">Social Media</span>
          </div>
          <a href="/work/sjsu-athletics" class="inline-flex items-center text-white font-semibold hover:text-blue-200 transition-colors">
            View SJSU Work
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <!-- Cal Football Card -->
        <div class="bg-gradient-to-br from-yellow-600 to-yellow-800 rounded-lg p-8 text-white">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold">Cal Football</h3>
          </div>
          <p class="text-yellow-100 mb-6">
            Game posters, recruiting materials, statistical graphics, and promotional content for Cal Football program.
          </p>
          <div class="flex flex-wrap gap-2 mb-6">
            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">Game Posters</span>
            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">Recruiting</span>
            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">Statistics</span>
            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">Awards</span>
          </div>
          <a href="/work/cal-football" class="inline-flex items-center text-white font-semibold hover:text-yellow-200 transition-colors">
            View Cal Work
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Future sections can be added here with the same format -->
      <!-- 
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Branding & Creative Projects</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Brand identity, creative campaigns, and design projects.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <!-- Future project cards -->
      </div>
      -->
    </div>
  </section>

  <!-- All Collections Section -->
  <section id="collections" class="py-16 bg-gray-50">
    <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">All Collections</h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
          Every project collection from across all work categories. Click any card to jump directly to that collection on its respective work page.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {allCollections.map((collection) => {
          // Get thumbnail image
          const thumbnail = collection.type === 'nested' 
            ? collection.data.projects[0]?.subprojects?.[0]?.images?.[0]
            : collection.data.projects[0]?.images?.[0];
            
          return (
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
              <!-- Thumbnail -->
              <div class="relative h-48 bg-gray-200 overflow-hidden">
                {thumbnail ? (
                  <img 
                    src={thumbnail.src} 
                    alt={thumbnail.alt}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                )}
                
                <!-- Program Badge -->
                <div class="absolute top-3 left-3">
                  <span class={`inline-block px-2 py-1 text-xs font-semibold rounded-full ${
                    collection.color === 'blue' 
                      ? 'bg-blue-600 text-blue-100' 
                      : 'bg-yellow-600 text-yellow-100'
                  }`}>
                    {collection.workPage === 'sjsu-athletics' ? 'SJSU Athletics' : 'Cal Football'}
                  </span>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-5">
                <h3 class={`text-lg font-bold mb-2 transition-colors ${
                  collection.color === 'blue' 
                    ? 'text-gray-900 group-hover:text-blue-600' 
                    : 'text-gray-900 group-hover:text-yellow-600'
                }`}>
                  {collection.name}
                </h3>
                <p class="text-gray-600 mb-4 text-sm leading-relaxed">{collection.data.description}</p>
                
                <!-- Meta Info -->
                <div class="flex justify-between items-center text-xs text-gray-500 mb-4">
                  <span class="font-medium">
                    {collection.workPage === 'sjsu-athletics' ? '2023' : '2022'}
                  </span>
                  <span class={`px-2 py-1 rounded-full font-medium ${
                    collection.color === 'blue' 
                      ? 'bg-blue-50 text-blue-600' 
                      : 'bg-yellow-50 text-yellow-600'
                  }`}>
                    {collection.type === 'nested' 
                      ? `${collection.data.projects[0]?.subprojects?.length || 0} subproject${(collection.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                      : `${collection.data.projects[0]?.images?.length || 0} image${(collection.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
                    }
                  </span>
                </div>
                
                <!-- Action Button -->
                <a 
                  href={`/work/${collection.workPage}#${collection.id}`} 
                  class={`inline-flex items-center w-full justify-center px-4 py-2 font-medium rounded-lg transition-all duration-300 text-sm ${
                    collection.color === 'blue' 
                      ? 'bg-blue-600 text-white hover:bg-blue-700' 
                      : 'bg-yellow-600 text-white hover:bg-yellow-700'
                  }`}
                >
                  View Collection
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gray-900 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Like What You See?</h2>
      <p class="text-xl text-gray-300 mb-8">
        Let's discuss how I can help elevate your sports program's visual content.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
          Start a Project
        </a>
        <a href="/experience" class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-300 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
          View Experience
        </a>
      </div>
    </div>
  </section>
</Layout>