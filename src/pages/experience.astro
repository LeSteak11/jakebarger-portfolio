---
import Layout from '../layouts/Layout.astro';

// Import experience data
import experienceData from '../../data/experience.json';

const { experiences } = experienceData;
---

<Layout title="Experience - Jake Barger Portfolio">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Experience</h1>
        <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
          A journey through sports design and photography across multiple collegiate athletics programs.
        </p>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">
          From student internship to leading graphic designer, each role has contributed to developing 
          a comprehensive skill set in sports marketing and visual content creation.
        </p>
      </div>
    </div>
  </section>

  <!-- Career Timeline -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Career Timeline</h2>
        <p class="text-lg text-gray-600">
          Professional growth through increasingly responsible roles in collegiate athletics.
        </p>
      </div>

      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gray-200"></div>

        {experiences.map((experience, index) => (
          <div class={`relative flex items-center ${index % 2 === 0 ? 'justify-start' : 'justify-end'} mb-16`}>
            <!-- Timeline dot -->
            <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary-600 rounded-full border-4 border-white shadow-lg z-10"></div>
            
            <!-- Content card -->
            <div class={`w-5/12 ${index % 2 === 0 ? 'pr-8 text-right' : 'pl-8 text-left'}`}>
              <div class="bg-white rounded-lg shadow-lg p-6 border">
                {experience.featured && (
                  <div class="mb-3">
                    <span class="inline-block px-3 py-1 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold">
                      Featured Role
                    </span>
                  </div>
                )}
                
                <div class="mb-4">
                  <h3 class="text-xl font-bold text-gray-900 mb-1">{experience.title}</h3>
                  <h4 class="text-lg font-semibold text-primary-600 mb-2">{experience.organization}</h4>
                  <div class="text-sm text-gray-500 mb-1">{experience.duration}</div>
                  <div class="text-sm text-gray-500">{experience.location}</div>
                </div>
                
                <p class="text-gray-600 mb-4 leading-relaxed">{experience.description}</p>
                
                <!-- Key achievements -->
                {experience.achievements && experience.achievements.length > 0 && (
                  <div class="mb-4">
                    <h5 class="text-sm font-semibold text-gray-900 mb-2">Key Achievements:</h5>
                    <ul class="text-sm text-gray-600 space-y-1">
                      {experience.achievements.map((achievement) => (
                        <li class="flex items-start">
                          <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                          </svg>
                          {achievement}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
                
                <!-- Skills -->
                <div class="flex flex-wrap gap-2">
                  {experience.skills.slice(0, 4).map((skill) => (
                    <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
                      {skill}
                    </span>
                  ))}
                  {experience.skills.length > 4 && (
                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                      +{experience.skills.length - 4} more
                    </span>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Detailed Experience Cards -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Role Deep Dive</h2>
        <p class="text-lg text-gray-600">
          Detailed breakdown of responsibilities and accomplishments in each position.
        </p>
      </div>

      <div class="space-y-12">
        {experiences.map((experience) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="bg-primary-600 text-white p-6">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div>
                  <h3 class="text-2xl font-bold mb-1">{experience.title}</h3>
                  <h4 class="text-xl opacity-90 mb-2">{experience.organization}</h4>
                  <div class="text-primary-100">{experience.duration} â€¢ {experience.location}</div>
                </div>
                {experience.featured && (
                  <div class="mt-4 md:mt-0">
                    <span class="inline-block px-4 py-2 bg-white bg-opacity-20 rounded-full text-sm font-semibold">
                      Current Position
                    </span>
                  </div>
                )}
              </div>
            </div>
            
            <div class="p-6">
              <p class="text-lg text-gray-700 mb-6 leading-relaxed">{experience.description}</p>
              
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Responsibilities -->
                <div>
                  <h5 class="text-lg font-semibold text-gray-900 mb-4">Key Responsibilities</h5>
                  <ul class="space-y-3">
                    {experience.responsibilities.map((responsibility) => (
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-primary-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span class="text-gray-700">{responsibility}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                
                <!-- Achievements & Skills -->
                <div>
                  {experience.achievements && experience.achievements.length > 0 && (
                    <div class="mb-6">
                      <h5 class="text-lg font-semibold text-gray-900 mb-4">Notable Achievements</h5>
                      <ul class="space-y-2">
                        {experience.achievements.map((achievement) => (
                          <li class="flex items-start">
                            <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="text-gray-700">{achievement}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                  
                  <div>
                    <h5 class="text-lg font-semibold text-gray-900 mb-4">Skills Developed</h5>
                    <div class="flex flex-wrap gap-2">
                      {experience.skills.map((skill) => (
                        <span class="px-3 py-1 bg-primary-100 text-primary-800 rounded-full text-sm font-medium">
                          {skill}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Skills & Expertise -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Skills & Expertise</h2>
        <p class="text-lg text-gray-600">
          Comprehensive skill set developed through diverse roles in collegiate athletics.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Graphic Design</h3>
          <p class="text-gray-600 text-sm">Adobe Creative Suite, Brand Development, Layout Design</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Photography</h3>
          <p class="text-gray-600 text-sm">Sports Photography, Event Coverage, Photo Editing</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2M7 4h10M7 4l-2 16h14L17 4M9 9v6m6-6v6"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Social Media</h3>
          <p class="text-gray-600 text-sm">Content Strategy, Platform Management, Engagement</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Sports Marketing</h3>
          <p class="text-gray-600 text-sm">Campaign Development, Brand Management, Fan Engagement</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Ready to Work Together?</h2>
      <p class="text-xl text-primary-100 mb-8">
        Let's discuss how my experience can benefit your athletics program.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-colors">
          Get In Touch
        </a>
        <a href="/work" class="inline-flex items-center px-6 py-3 border-2 border-primary-300 text-primary-100 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
          View My Work
        </a>
      </div>
    </div>
  </section>
</Layout>