---
import Layout from '../../layouts/Layout.astro';
import ProjectGrid from '../../components/ProjectGrid.astro';
import Gallery from '../../components/Gallery.astro';

// Import SJSU Athletics data
import schedulePosters from '../../../data/sjsu-athletics/schedule-posters.json';
import gamedayContent from '../../../data/sjsu-athletics/gameday-content.json';
import awardsAchievements from '../../../data/sjsu-athletics/awards-achievements.json';
import statGraphics from '../../../data/sjsu-athletics/stat-graphics.json';
import socialPromo from '../../../data/sjsu-athletics/social-promo.json';
import photography from '../../../data/sjsu-athletics/photography.json';

// Combine all SJSU projects
const allSJSUProjects = [
  ...schedulePosters.projects,
  ...gamedayContent.projects,
  ...awardsAchievements.projects,
  ...statGraphics.projects,
  ...socialPromo.projects,
  ...photography.projects
];

// Categories for navigation
const categories = [
  { name: "Schedule & Tournament Posters", data: schedulePosters, id: "schedules" },
  { name: "Gameday & Matchday Content", data: gamedayContent, id: "gameday" },
  { name: "Awards & Achievements", data: awardsAchievements, id: "awards" },
  { name: "Stat & Record Graphics", data: statGraphics, id: "stats" },
  { name: "Promotional & Social Media", data: socialPromo, id: "social" },
  { name: "Photography Highlights", data: photography, id: "photography" }
];

// Sample highlight images for hero
const heroImages = [
  {
    src: "/images/sjsu/highlights/hero-1.jpg",
    alt: "SJSU Athletics Design Work",
    caption: "Gameday Graphics Collection"
  },
  {
    src: "/images/sjsu/highlights/hero-2.jpg", 
    alt: "SJSU Schedule Poster",
    caption: "Fall Schedule Posters"
  },
  {
    src: "/images/sjsu/highlights/hero-3.jpg",
    alt: "SJSU Awards Graphic",
    caption: "Student-Athlete Recognition"
  }
];
---

<Layout title="SJSU Athletics - Jake Barger Portfolio">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="mb-4">
            <span class="inline-block px-3 py-1 bg-blue-600 text-blue-100 rounded-full text-sm font-semibold">
              Current Position
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">SJSU Athletics</h1>
          <p class="text-xl text-blue-100 mb-6">
            Graphic Designer & Photographer
          </p>
          <p class="text-lg text-blue-200 mb-8 leading-relaxed">
            Creating comprehensive visual content for 17+ sports teams at San Jos√© State University. 
            From gameday graphics to photography coverage, developing cohesive brand experiences 
            that elevate the entire athletics program.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#categories" class="inline-flex items-center px-6 py-3 bg-white text-blue-900 font-semibold rounded-lg hover:bg-blue-50 transition-colors">
              Explore Categories
            </a>
            <a href="#featured" class="inline-flex items-center px-6 py-3 border-2 border-blue-300 text-blue-100 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
              View Featured Work
            </a>
          </div>
        </div>
        
        <!-- Hero Gallery -->
        <div class="lg:ml-8">
          <Gallery images={heroImages} columns={1} lightbox={true} showCaptions={false} />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">17+</div>
          <div class="text-gray-600">Sports Teams</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">50+</div>
          <div class="text-gray-600">Events Covered</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">200+</div>
          <div class="text-gray-600">Graphics Created</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">40%</div>
          <div class="text-gray-600">Engagement Increase</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Navigation -->
  <section id="categories" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Work Categories</h2>
        <p class="text-lg text-gray-600">
          Explore different types of design work created for SJSU Athletics programs.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {categories.map((category) => (
          <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{category.name}</h3>
            <p class="text-gray-600 mb-4">{category.data.description}</p>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">
                {category.data.projects.length} project{category.data.projects.length !== 1 ? 's' : ''}
              </span>
              <a 
                href={`#${category.id}`} 
                class="inline-flex items-center text-blue-600 font-medium hover:text-blue-700"
              >
                View Work
                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section id="featured" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Projects</h2>
        <p class="text-lg text-gray-600">
          Highlighting the best work from each category.
        </p>
      </div>
      
      <ProjectGrid 
        projects={allSJSUProjects.filter(p => p.featured)} 
        showFilters={false}
      />
    </div>
  </section>

  <!-- Category Sections -->
  {categories.map((category) => (
    <section id={category.id} class="py-16 bg-gray-50 border-t">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{category.name}</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            {category.data.description}
          </p>
        </div>
        
        <ProjectGrid 
          projects={category.data.projects} 
          showFilters={false}
        />
      </div>
    </section>
  ))}

  <!-- All Projects with Filters -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">All SJSU Projects</h2>
        <p class="text-lg text-gray-600">
          Browse the complete collection with advanced filtering.
        </p>
      </div>
      
      <ProjectGrid 
        projects={allSJSUProjects} 
        showFilters={true}
      />
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-blue-900 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Interested in Similar Work?</h2>
      <p class="text-xl text-blue-100 mb-8">
        Let's discuss how I can create compelling visual content for your athletics program.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-white text-blue-900 font-semibold rounded-lg hover:bg-blue-50 transition-colors">
          Start a Project
        </a>
        <a href="/work/cal-football" class="inline-flex items-center px-6 py-3 border-2 border-blue-300 text-blue-100 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
          View Cal Football Work
        </a>
      </div>
    </div>
  </section>
</Layout>