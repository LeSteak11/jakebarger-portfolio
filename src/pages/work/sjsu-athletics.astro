---
import Layout from '../../layouts/Layout.astro';
import ProjectGrid from '../../components/ProjectGrid.astro';
import Gallery from '../../components/Gallery.astro';

// Import SJSU Athletics data
import schedulePosters from '../../../data/sjsu-athletics/schedule-posters.json';
import gamedayContent from '../../../data/sjsu-athletics/gameday-content.json';
import performanceHighlights from '../../../data/sjsu-athletics/performance-highlights.json';

// All categories for navigation
const categories = [
  { 
    name: "Performance Highlights", 
    data: performanceHighlights, 
    id: "performance",
    type: "flat" // This category has images directly
  },
  { 
    name: "Schedule Posters", 
    data: schedulePosters, 
    id: "schedules",
    type: "nested" // This category has subprojects
  },
  { 
    name: "Gameday Content", 
    data: gamedayContent, 
    id: "gameday",
    type: "flat" // This category has images directly
  }
];

// Sample highlight images for hero
const heroImages = [
  {
    src: "/images/sjsu-athletics/performance-highlights-sjsu/SJSU_VB_BlockParty_Fall2023.jpg",
    alt: "SJSU Athletics Design Work",
    caption: "Performance Highlights"
  },
  {
    src: "/images/sjsu-athletics/schedule-posters/fall-2023-series/SJSU_Football_SchedulePoster_Fall2023.jpg", 
    alt: "SJSU Schedule Poster",
    caption: "Schedule Poster Series"
  },
  {
    src: "/images/sjsu-athletics/gameday-content/SJSU_Baseball_Template_Gameday-web_2023.jpg",
    alt: "SJSU Gameday Content",
    caption: "Gameday Templates"
  }
];
---

<Layout title="SJSU Athletics - Jake Barger Portfolio">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20">
    <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <div class="mb-4">
            <span class="inline-block px-3 py-1 bg-blue-600 text-blue-100 rounded-full text-sm font-semibold">
              Current Position
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">SJSU Athletics</h1>
          <p class="text-xl text-blue-100 mb-6">
            Graphic Designer & Photographer
          </p>
          <p class="text-lg text-blue-200 mb-8 leading-relaxed">
            Creating comprehensive visual content for 17+ sports teams at San José State University. 
            From gameday graphics to photography coverage, developing cohesive brand experiences 
            that elevate the entire athletics program.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#categories" class="inline-flex items-center px-6 py-3 bg-white text-blue-900 font-semibold rounded-lg hover:bg-blue-50 transition-colors">
              Explore Categories
            </a>
            <a href="#featured" class="inline-flex items-center px-6 py-3 border-2 border-blue-300 text-blue-100 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
              View Featured Work
            </a>
          </div>
        </div>
        
        <!-- Hero Gallery - Enhanced Layout -->
        <div class="lg:ml-8">
          <div class="grid grid-cols-2 gap-4">
            <!-- Large primary image -->
            <div class="col-span-2">
              <img 
                src={heroImages[0].src} 
                alt={heroImages[0].alt}
                class="w-full h-64 lg:h-80 object-cover rounded-xl shadow-lg"
                loading="eager"
              />
            </div>
            <!-- Two smaller images -->
            <div>
              <img 
                src={heroImages[1].src} 
                alt={heroImages[1].alt}
                class="w-full h-32 lg:h-40 object-cover rounded-lg shadow-md"
                loading="eager"
              />
            </div>
            <div>
              <img 
                src={heroImages[2].src} 
                alt={heroImages[2].alt}
                class="w-full h-32 lg:h-40 object-cover rounded-lg shadow-md"
                loading="eager"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b">
    <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">17+</div>
          <div class="text-gray-600">Sports Teams</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">50+</div>
          <div class="text-gray-600">Events Covered</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">200+</div>
          <div class="text-gray-600">Graphics Created</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">40%</div>
          <div class="text-gray-600">Engagement Increase</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Collections Section -->
  <section id="collections" class="py-16 bg-gray-50">
    <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Collections</h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
          Explore different types of design work created for SJSU Athletics programs.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {categories.map((category) => {
          // Get thumbnail image
          const thumbnail = category.type === 'nested' 
            ? category.data.projects[0]?.subprojects?.[0]?.images?.[0]
            : category.data.projects[0]?.images?.[0];
            
          return (
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
              <!-- Thumbnail -->
              <div class="relative h-48 bg-gray-200 overflow-hidden">
                {thumbnail ? (
                  <img 
                    src={thumbnail.src} 
                    alt={thumbnail.alt}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                )}
              </div>
              
              <!-- Content -->
              <div class="p-5">
                <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">{category.name}</h3>
                <p class="text-gray-600 mb-4 text-sm leading-relaxed">{category.data.description}</p>
                
                <!-- Meta Info -->
                <div class="flex justify-between items-center text-xs text-gray-500 mb-4">
                  <span class="font-medium">2023</span>
                  <span class="bg-blue-50 text-blue-600 px-2 py-1 rounded-full font-medium">
                    {category.type === 'nested' 
                      ? `${category.data.projects[0]?.subprojects?.length || 0} subproject${(category.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                      : `${category.data.projects[0]?.images?.length || 0} image${(category.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
                    }
                  </span>
                </div>
                
                <!-- Action Button -->
                <a 
                  href={`#${category.id}`} 
                  class="inline-flex items-center w-full justify-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-all duration-300 smooth-scroll text-sm"
                >
                  View Collection
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                  </svg>
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Individual Collection Sections -->
  {categories.map((category, index) => (
    <section id={category.id} class={`py-16 ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'} border-t`}>
      <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
        <!-- Collection Header -->
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-6">{category.name}</h2>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto mb-8 leading-relaxed">
            {category.data.description}
          </p>
          
          <!-- Collection Stats -->
          <div class="inline-flex items-center gap-8 text-gray-500 mb-8">
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              {category.type === 'nested' 
                ? `${category.data.projects[0]?.subprojects?.length || 0} subproject${(category.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                : `${category.data.projects[0]?.images?.length || 0} image${(category.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
              }
            </span>
            <span>•</span>
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              2023
            </span>
          </div>
        </div>
        
        {category.type === 'nested' ? (
          <!-- Tab-based nested collection with subprojects -->
          <div 
            x-data="{
              activeTab: 0
            }"
            class="space-y-6"
          >
            <!-- Interactive Tab Navigation -->
            <div class="sticky top-0 z-10 bg-white/95 backdrop-blur-sm border-b border-gray-200 py-3 -mt-4 mb-6">
              <div class="flex flex-wrap justify-center gap-2">
                {category.data.projects[0]?.subprojects?.map((subproject, index) => (
                  <button 
                    x-on:click={`activeTab = ${index}`}
                    x-bind:class={`activeTab === ${index} ? 'bg-blue-600 text-white border-blue-600' : 'bg-blue-50 text-blue-700 border-blue-200 hover:bg-blue-100'`}
                    class="px-4 py-2 rounded-full border font-medium transition-all duration-300 text-sm"
                  >
                    {subproject.title}
                  </button>
                ))}
              </div>
            </div>

            <!-- Dynamic Content Area -->
            <div class="relative min-h-[400px]">
              {category.data.projects[0]?.subprojects?.map((subproject, subIndex) => (
                <div 
                  x-show={`activeTab === ${subIndex}`}
                  x-transition:enter="transition ease-out duration-300"
                  x-transition:enter-start="opacity-0 transform translate-y-4"
                  x-transition:enter-end="opacity-100 transform translate-y-0"
                  x-transition:leave="transition ease-in duration-200"
                  x-transition:leave-start="opacity-100"
                  x-transition:leave-end="opacity-0"
                  class="bg-slate-50 rounded-lg p-4 lg:p-6 shadow-sm"
                  style={subIndex !== 0 ? "display: none;" : ""}
                >
                  <!-- Subproject Header -->
                  <div class="text-center mb-6">
                    <div class="inline-flex items-center gap-3 mb-3">
                      <div class="h-px bg-gradient-to-r from-transparent via-blue-300 to-transparent flex-1"></div>
                      <span class="text-xs font-medium text-blue-600 bg-white px-3 py-1 rounded-full border border-blue-200">
                        {subIndex + 1} of {category.data.projects[0]?.subprojects?.length || 0}
                      </span>
                      <div class="h-px bg-gradient-to-r from-transparent via-blue-300 to-transparent flex-1"></div>
                    </div>
                    
                    <h3 class="text-xl lg:text-2xl font-bold text-gray-900 mb-3">
                      {subproject.title}
                    </h3>
                    
                    <!-- Accent line under title -->
                    <div class="w-20 h-0.5 bg-gradient-to-r from-blue-500 to-blue-600 mx-auto mb-4 rounded-full"></div>
                    
                    {subproject.description && (
                      <p class="text-sm text-gray-600 max-w-2xl mx-auto mb-4 leading-relaxed">
                        {subproject.description}
                      </p>
                    )}
                    
                    <div class="flex items-center justify-center gap-4 text-xs text-gray-500 mb-6">
                      <span class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        {subproject.images?.length || 0} image{(subproject.images?.length || 0) !== 1 ? 's' : ''}
                      </span>
                    </div>
                  </div>

                  <!-- Enhanced Gallery -->
                  <div class="gallery-container">
                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 lg:gap-3">
                      {(subproject.images || []).map((image, imageIndex) => (
                        <div class="group relative aspect-square bg-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 cursor-pointer">
                          <img 
                            src={image.src} 
                            alt={image.alt}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            loading="lazy"
                          />
                          <!-- Hover overlay -->
                          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
                            <div class="bg-white/90 backdrop-blur-sm px-2 py-1 rounded text-xs font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                              View
                            </div>
                          </div>
                          <!-- Image number indicator -->
                          <div class="absolute top-2 left-2 bg-black/50 text-white text-xs px-2 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            {imageIndex + 1}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ) : (
          <!-- Full flat collection -->
          <div class="bg-slate-50 rounded-xl p-4 lg:p-6 shadow-sm">
            <div class="gallery-container">
              <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-2 lg:gap-3">
                {(category.data.projects[0]?.images || []).map((image, imageIndex) => (
                  <div class="group relative aspect-square bg-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 cursor-pointer">
                    <img 
                      src={image.src} 
                      alt={image.alt}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                    <!-- Hover overlay -->
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
                      <div class="bg-white/90 backdrop-blur-sm px-2 py-1 rounded text-xs font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        View
                      </div>
                    </div>
                    <!-- Image number indicator -->
                    <div class="absolute top-3 left-3 bg-black/50 text-white text-xs px-2 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      {imageIndex + 1}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}
        
        <!-- Back to Collections -->
        <div class="text-center mt-8 pt-4 border-t border-gray-200">
          <a 
            href="#collections" 
            class="inline-flex items-center px-4 py-2 text-blue-600 hover:text-blue-700 font-medium transition-colors smooth-scroll text-sm"
          >
            <svg class="mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
            </svg>
            Back to Collections
          </a>
        </div>
      </div>
    </section>
  ))}

  <!-- Footer CTA -->
  <section class="py-16 bg-gray-900 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Explore More Work</h2>
      <p class="text-xl text-gray-300 mb-8">
        Check out my complete portfolio including Cal Football and other projects.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/work" class="inline-flex items-center px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors text-lg">
          View All Work
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a href="/work/cal-football" class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-300 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
          View Cal Football Work
        </a>
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors">
          Start a Project
        </a>
      </div>
    </div>
  </section>

  <!-- Smooth Scroll JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add smooth scrolling to all links with smooth-scroll class
      const smoothScrollLinks = document.querySelectorAll('a[href^="#"], .smooth-scroll');
      
      smoothScrollLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          
          const targetId = this.getAttribute('href');
          const targetElement = document.querySelector(targetId);
          
          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    });
  </script>
</Layout>