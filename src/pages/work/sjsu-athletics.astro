---
import Layout from '../../layouts/Layout.astro';
import ProjectGrid from '../../components/ProjectGrid.astro';
import Gallery from '../../components/Gallery.astro';

// Import SJSU Athletics data
import schedulePosters from '../../../data/sjsu-athletics/schedule-posters.json';
import gamedayContent from '../../../data/sjsu-athletics/gameday-content.json';
import performanceHighlights from '../../../data/sjsu-athletics/performance-highlights.json';

// All categories for navigation
const categories = [
  { 
    name: "Performance Highlights", 
    data: performanceHighlights, 
    id: "performance",
    type: "flat" // This category has images directly
  },
  { 
    name: "Schedule Posters", 
    data: schedulePosters, 
    id: "schedules",
    type: "nested" // This category has subprojects
  },
  { 
    name: "Gameday Content", 
    data: gamedayContent, 
    id: "gameday",
    type: "flat" // This category has images directly
  }
];

// Sample highlight images for hero
const heroImages = [
  {
    src: "/images/sjsu-athletics/performance-highlights-sjsu/SJSU_VB_BlockParty_Fall2023.jpg",
    alt: "SJSU Athletics Design Work",
    caption: "Performance Highlights"
  },
  {
    src: "/images/sjsu-athletics/schedule-posters/fall-2023-series/SJSU_Football_SchedulePoster_Fall2023.jpg", 
    alt: "SJSU Schedule Poster",
    caption: "Schedule Poster Series"
  },
  {
    src: "/images/sjsu-athletics/gameday-content/SJSU_Baseball_Template_Gameday-web_2023.jpg",
    alt: "SJSU Gameday Content",
    caption: "Gameday Templates"
  }
];
---

<Layout title="SJSU Athletics - Jake Barger Portfolio">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="mb-4">
            <span class="inline-block px-3 py-1 bg-blue-600 text-blue-100 rounded-full text-sm font-semibold">
              Current Position
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">SJSU Athletics</h1>
          <p class="text-xl text-blue-100 mb-6">
            Graphic Designer & Photographer
          </p>
          <p class="text-lg text-blue-200 mb-8 leading-relaxed">
            Creating comprehensive visual content for 17+ sports teams at San José State University. 
            From gameday graphics to photography coverage, developing cohesive brand experiences 
            that elevate the entire athletics program.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#categories" class="inline-flex items-center px-6 py-3 bg-white text-blue-900 font-semibold rounded-lg hover:bg-blue-50 transition-colors">
              Explore Categories
            </a>
            <a href="#featured" class="inline-flex items-center px-6 py-3 border-2 border-blue-300 text-blue-100 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
              View Featured Work
            </a>
          </div>
        </div>
        
        <!-- Hero Gallery -->
        <div class="lg:ml-8">
          <Gallery images={heroImages} columns={1} lightbox={true} showCaptions={false} />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">17+</div>
          <div class="text-gray-600">Sports Teams</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">50+</div>
          <div class="text-gray-600">Events Covered</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">200+</div>
          <div class="text-gray-600">Graphics Created</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">40%</div>
          <div class="text-gray-600">Engagement Increase</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Navigation -->
  <section id="categories" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Work Categories</h2>
        <p class="text-lg text-gray-600 mb-8">
          Explore different types of design work created for SJSU Athletics programs.
        </p>
        
        <!-- Quick Jump Links -->
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          {categories.map((category) => (
            <a 
              href={`#${category.id}`} 
              class="px-4 py-2 bg-white text-blue-600 rounded-full border border-blue-200 hover:bg-blue-50 transition-colors text-sm font-medium"
            >
              {category.name}
            </a>
          ))}
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {categories.map((category) => {
          // Get thumbnail image
          const thumbnail = category.type === 'nested' 
            ? category.data.projects[0]?.subprojects?.[0]?.images?.[0]
            : category.data.projects[0]?.images?.[0];
            
          return (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <!-- Thumbnail -->
              <div class="relative h-48 bg-gray-200 overflow-hidden">
                {thumbnail ? (
                  <img 
                    src={thumbnail.src} 
                    alt={thumbnail.alt}
                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                )}
                
                <!-- Category Badge -->
                <div class="absolute top-4 left-4">
                  <span class="bg-blue-600 text-white px-3 py-1 text-xs font-semibold rounded-full">
                    {category.type === 'nested' 
                      ? `${category.data.projects[0]?.subprojects?.length || 0} subproject${(category.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                      : `${category.data.projects[0]?.images?.length || 0} image${(category.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
                    }
                  </span>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-3">{category.name}</h3>
                <p class="text-gray-600 mb-6 text-sm leading-relaxed">{category.data.description}</p>
                
                <!-- Action Button -->
                <a 
                  href={`#${category.id}`} 
                  class="inline-flex items-center w-full justify-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
                >
                  View Work
                  <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Category Preview Sections -->
  {categories.map((category) => (
    <section id={category.id} class="py-16 bg-white border-t">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{category.name}</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-6">
            {category.data.description}
          </p>
          
          <!-- Quick Stats -->
          <div class="inline-flex items-center gap-6 text-sm text-gray-500 mb-8">
            <span>
              {category.type === 'nested' 
                ? `${category.data.projects[0]?.subprojects?.length || 0} subproject${(category.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                : `${category.data.projects[0]?.images?.length || 0} image${(category.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
              }
            </span>
            <span>•</span>
            <span>2023</span>
          </div>
        </div>
        
        {category.type === 'nested' ? (
          <!-- Preview for nested projects -->
          <div class="space-y-12">
            {category.data.projects[0]?.subprojects?.slice(0, 2).map((subproject) => (
              <div class="text-center">
                <h3 class="text-xl font-semibold text-gray-900 mb-6">{subproject.title}</h3>
                
                <!-- Preview Grid (3-4 images) -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                  {(subproject.images || []).slice(0, 4).map((image) => (
                    <div class="relative aspect-square bg-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
                      <img 
                        src={image.src} 
                        alt={image.alt}
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                  ))}
                </div>
                
                {(subproject.images || []).length > 4 && (
                  <p class="text-sm text-gray-500 mb-4">
                    +{(subproject.images || []).length - 4} more images
                  </p>
                )}
              </div>
            ))}
            
            {(category.data.projects[0]?.subprojects?.length || 0) > 2 && (
              <div class="text-center mt-8">
                <p class="text-gray-600 mb-4">
                  +{(category.data.projects[0]?.subprojects?.length || 0) - 2} more subproject{((category.data.projects[0]?.subprojects?.length || 0) - 2) !== 1 ? 's' : ''}
                </p>
              </div>
            )}
          </div>
        ) : (
          <!-- Preview for flat projects -->
          <div class="text-center">
            <!-- Preview Grid (3-4 images) -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
              {(category.data.projects[0]?.images || []).slice(0, 4).map((image) => (
                <div class="relative aspect-square bg-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
                  <img 
                    src={image.src} 
                    alt={image.alt}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              ))}
            </div>
            
            {(category.data.projects[0]?.images || []).length > 4 && (
              <p class="text-sm text-gray-500 mb-6">
                +{(category.data.projects[0]?.images || []).length - 4} more images
              </p>
            )}
          </div>
        )}
        
        <!-- View All Button -->
        <div class="text-center mt-8">
          <a 
            href={`/work/sjsu-athletics/${category.id}`}
            class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
          >
            View All {category.name}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  ))}

  <!-- Navigation Footer -->
  <section class="py-16 bg-gray-900 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Explore More Work</h2>
      <p class="text-xl text-gray-300 mb-8">
        Check out my other projects and athletic program designs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/work/cal-football" class="inline-flex items-center px-6 py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors">
          View Cal Football Work
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a href="/work" class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-300 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
          View All Work
        </a>
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
          Start a Project
        </a>
      </div>
    </div>
  </section>
</Layout>