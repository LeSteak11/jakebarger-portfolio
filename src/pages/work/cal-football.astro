---
import Layout from '../../layouts/Layout.astro';
import ProjectGrid from '../../components/ProjectGrid.astro';
import Gallery from '../../components/Gallery.astro';

// Import Cal Football data
import performanceHighlights from '../../../data/cal-football/performance-highlights.json';
import gameWeekContent from '../../../data/cal-football/game-week-content.json';
import recruitingContent from '../../../data/cal-football/recruiting-content.json';
import nflDraftContent from '../../../data/cal-football/nfl-draft-content.json';

// All categories for navigation
const categories = [
  { 
    name: "Performance Highlights", 
    data: performanceHighlights, 
    id: "performance",
    type: "flat" // This category has images directly
  },
  { 
    name: "Game Week Content", 
    data: gameWeekContent, 
    id: "gameweek",
    type: "nested" // This category has subprojects
  },
  { 
    name: "Recruiting Content", 
    data: recruitingContent, 
    id: "recruiting",
    type: "nested" // This category has subprojects
  },
  { 
    name: "NFL Draft Content", 
    data: nflDraftContent, 
    id: "nfl-draft",
    type: "flat" // This category has images directly
  }
];

// Sample highlight images for hero
const heroImages = [
  {
    src: "/images/cal-football/performance-highlights-cal/CAL_Football_BigGame_VictoryGraphic_2022.jpg",
    alt: "Cal Football Big Game Victory",
    caption: "Big Game Victory"
  },
  {
    src: "/images/cal-football/recruiting-content/national-signing-day/CAL_Recruiting_NSD-Brown_2022.jpg", 
    alt: "Cal Football Recruiting Graphic",
    caption: "National Signing Day"
  },
  {
    src: "/images/cal-football/game-week-content/matchup-posters/CAL_FB_MatchupPoster_Arizona_2022.jpg",
    alt: "Cal Football Matchup Poster",
    caption: "Game Week Content"
  }
];
---

<Layout title="Cal Football - Jake Barger Portfolio">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-yellow-900 via-yellow-800 to-yellow-700 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="mb-4">
            <span class="inline-block px-3 py-1 bg-yellow-600 text-yellow-100 rounded-full text-sm font-semibold">
              Previous Experience
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Cal Football</h1>
          <p class="text-xl text-yellow-100 mb-6">
            Graphic Designer
          </p>
          <p class="text-lg text-yellow-200 mb-8 leading-relaxed">
            Created comprehensive visual content for the Cal Golden Bears football program. 
            Developed gameday campaigns, recruiting materials, and statistical graphics that 
            supported both on-field success and program marketing initiatives.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#categories" class="inline-flex items-center px-6 py-3 bg-white text-yellow-900 font-semibold rounded-lg hover:bg-yellow-50 transition-colors">
              Explore Categories
            </a>
            <a href="#featured" class="inline-flex items-center px-6 py-3 border-2 border-yellow-300 text-yellow-100 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
              View Featured Work
            </a>
          </div>
        </div>
        
        <!-- Hero Gallery -->
        <div class="lg:ml-8">
          <Gallery images={heroImages} columns={1} lightbox={true} showCaptions={false} />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">12+</div>
          <div class="text-gray-600">Game Posters</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">25+</div>
          <div class="text-gray-600">Recruiting Graphics</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">2</div>
          <div class="text-gray-600">Seasons Covered</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">1</div>
          <div class="text-gray-600">Bowl Game</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Program Highlights -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Program Highlights</h2>
        <p class="text-lg text-gray-600">Key achievements and memorable projects from my time with Cal Football.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg p-6 text-center shadow-sm">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Big Game Campaign</h3>
          <p class="text-gray-600">Comprehensive visual package for the annual Cal vs Stanford rivalry game.</p>
        </div>
        
        <div class="bg-white rounded-lg p-6 text-center shadow-sm">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Recruiting Success</h3>
          <p class="text-gray-600">Visual content supporting top-tier recruiting classes and commitment announcements.</p>
        </div>
        
        <div class="bg-white rounded-lg p-6 text-center shadow-sm">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Performance Graphics</h3>
          <p class="text-gray-600">Statistical visualizations and award recognition graphics for players and team.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Navigation -->
  <section id="categories" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Work Categories</h2>
        <p class="text-lg text-gray-600 mb-8">
          Explore different types of design work created for Cal Football.
        </p>
        
        <!-- Quick Jump Links -->
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          {categories.map((category) => (
            <a 
              href={`#${category.id}`} 
              class="px-4 py-2 bg-white text-yellow-600 rounded-full border border-yellow-200 hover:bg-yellow-50 transition-colors text-sm font-medium"
            >
              {category.name}
            </a>
          ))}
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {categories.map((category) => {
          // Get thumbnail image
          const thumbnail = category.type === 'nested' 
            ? category.data.projects[0]?.subprojects?.[0]?.images?.[0]
            : category.data.projects[0]?.images?.[0];
            
          return (
            <div class="bg-gray-50 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <!-- Thumbnail -->
              <div class="relative h-48 bg-gray-200 overflow-hidden">
                {thumbnail ? (
                  <img 
                    src={thumbnail.src} 
                    alt={thumbnail.alt}
                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                )}
                
                <!-- Category Badge -->
                <div class="absolute top-4 left-4">
                  <span class="bg-yellow-600 text-white px-3 py-1 text-xs font-semibold rounded-full">
                    {category.type === 'nested' 
                      ? `${category.data.projects[0]?.subprojects?.length || 0} subproject${(category.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                      : `${category.data.projects[0]?.images?.length || 0} image${(category.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
                    }
                  </span>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-3">{category.name}</h3>
                <p class="text-gray-600 mb-6 text-sm leading-relaxed">{category.data.description}</p>
                
                <!-- Action Button -->
                <a 
                  href={`#${category.id}`} 
                  class="inline-flex items-center w-full justify-center px-4 py-2 bg-yellow-600 text-white font-medium rounded-lg hover:bg-yellow-700 transition-colors"
                >
                  View Work
                  <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Category Preview Sections -->
  {categories.map((category) => (
    <section id={category.id} class="py-16 bg-gray-50 border-t">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{category.name}</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-6">
            {category.data.description}
          </p>
          
          <!-- Quick Stats -->
          <div class="inline-flex items-center gap-6 text-sm text-gray-500 mb-8">
            <span>
              {category.type === 'nested' 
                ? `${category.data.projects[0]?.subprojects?.length || 0} subproject${(category.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                : `${category.data.projects[0]?.images?.length || 0} image${(category.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
              }
            </span>
            <span>â€¢</span>
            <span>2022</span>
          </div>
        </div>
        
        {category.type === 'nested' ? (
          <!-- Preview for nested projects -->
          <div class="space-y-12">
            {category.data.projects[0]?.subprojects?.slice(0, 2).map((subproject) => (
              <div class="text-center">
                <h3 class="text-xl font-semibold text-gray-900 mb-6">{subproject.title}</h3>
                
                <!-- Preview Grid (3-4 images) -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                  {(subproject.images || []).slice(0, 4).map((image) => (
                    <div class="relative aspect-square bg-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
                      <img 
                        src={image.src} 
                        alt={image.alt}
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                  ))}
                </div>
                
                {(subproject.images || []).length > 4 && (
                  <p class="text-sm text-gray-500 mb-4">
                    +{(subproject.images || []).length - 4} more images
                  </p>
                )}
              </div>
            ))}
            
            {(category.data.projects[0]?.subprojects?.length || 0) > 2 && (
              <div class="text-center mt-8">
                <p class="text-gray-600 mb-4">
                  +{(category.data.projects[0]?.subprojects?.length || 0) - 2} more subproject{((category.data.projects[0]?.subprojects?.length || 0) - 2) !== 1 ? 's' : ''}
                </p>
              </div>
            )}
          </div>
        ) : (
          <!-- Preview for flat projects -->
          <div class="text-center">
            <!-- Preview Grid (3-4 images) -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
              {(category.data.projects[0]?.images || []).slice(0, 4).map((image) => (
                <div class="relative aspect-square bg-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
                  <img 
                    src={image.src} 
                    alt={image.alt}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              ))}
            </div>
            
            {(category.data.projects[0]?.images || []).length > 4 && (
              <p class="text-sm text-gray-500 mb-6">
                +{(category.data.projects[0]?.images || []).length - 4} more images
              </p>
            )}
          </div>
        )}
        
        <!-- View All Button -->
        <div class="text-center mt-8">
          <a 
            href={`/work/cal-football/${category.id}`}
            class="inline-flex items-center px-6 py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors"
          >
            View All {category.name}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  ))}

  <!-- Navigation Footer -->
  <section class="py-16 bg-gray-900 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Explore More Work</h2>
      <p class="text-xl text-gray-300 mb-8">
        Check out my other projects and athletic program designs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/work/sjsu-athletics" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
          View SJSU Athletics Work
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a href="/work" class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-300 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
          View All Work
        </a>
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors">
          Start a Project
        </a>
      </div>
    </div>
  </section>
</Layout>