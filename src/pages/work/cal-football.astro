---
import Layout from '../../layouts/Layout.astro';
import ProjectGrid from '../../components/ProjectGrid.astro';
import Gallery from '../../components/Gallery.astro';

// Import Cal Football data
import performanceHighlights from '../../../data/cal-football/performance-highlights.json';
import gameWeekContent from '../../../data/cal-football/game-week-content.json';
import recruitingContent from '../../../data/cal-football/recruiting-content.json';
import nflDraftContent from '../../../data/cal-football/nfl-draft-content.json';

// All categories for navigation
const categories = [
  { 
    name: "Performance Highlights", 
    data: performanceHighlights, 
    id: "performance",
    type: "flat" // This category has images directly
  },
  { 
    name: "Game Week Content", 
    data: gameWeekContent, 
    id: "gameweek",
    type: "nested" // This category has subprojects
  },
  { 
    name: "Recruiting Content", 
    data: recruitingContent, 
    id: "recruiting",
    type: "nested" // This category has subprojects
  },
  { 
    name: "NFL Draft Content", 
    data: nflDraftContent, 
    id: "nfl-draft",
    type: "flat" // This category has images directly
  }
];

// Sample highlight images for hero
const heroImages = [
  {
    src: "/images/cal-football/performance-highlights-cal/CAL_Football_BigGame_VictoryGraphic_2022.jpg",
    alt: "Cal Football Big Game Victory",
    caption: "Big Game Victory"
  },
  {
    src: "/images/cal-football/recruiting-content/national-signing-day/CAL_Recruiting_NSD-Brown_2022.jpg", 
    alt: "Cal Football Recruiting Graphic",
    caption: "National Signing Day"
  },
  {
    src: "/images/cal-football/game-week-content/matchup-posters/CAL_FB_MatchupPoster_Arizona_2022.jpg",
    alt: "Cal Football Matchup Poster",
    caption: "Game Week Content"
  }
];
---

<Layout title="Cal Football - Jake Barger Portfolio">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-yellow-900 via-yellow-800 to-yellow-700 text-white py-20">
    <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <div class="mb-4">
            <span class="inline-block px-3 py-1 bg-yellow-600 text-yellow-100 rounded-full text-sm font-semibold">
              Previous Experience
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Cal Football</h1>
          <p class="text-xl text-yellow-100 mb-6">
            Graphic Designer
          </p>
          <p class="text-lg text-yellow-200 mb-8 leading-relaxed">
            Created comprehensive visual content for the Cal Golden Bears football program. 
            Developed gameday campaigns, recruiting materials, and statistical graphics that 
            supported both on-field success and program marketing initiatives.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#categories" class="inline-flex items-center px-6 py-3 bg-white text-yellow-900 font-semibold rounded-lg hover:bg-yellow-50 transition-colors">
              Explore Categories
            </a>
            <a href="#featured" class="inline-flex items-center px-6 py-3 border-2 border-yellow-300 text-yellow-100 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
              View Featured Work
            </a>
          </div>
        </div>
        
        <!-- Hero Gallery - Enhanced Layout -->
        <div class="lg:ml-8">
          <div class="grid grid-cols-2 gap-4">
            <!-- Large primary image -->
            <div class="col-span-2">
              <img 
                src={heroImages[0].src} 
                alt={heroImages[0].alt}
                class="w-full h-64 lg:h-80 object-cover rounded-xl shadow-lg"
                loading="eager"
              />
            </div>
            <!-- Two smaller images -->
            <div>
              <img 
                src={heroImages[1].src} 
                alt={heroImages[1].alt}
                class="w-full h-32 lg:h-40 object-cover rounded-lg shadow-md"
                loading="eager"
              />
            </div>
            <div>
              <img 
                src={heroImages[2].src} 
                alt={heroImages[2].alt}
                class="w-full h-32 lg:h-40 object-cover rounded-lg shadow-md"
                loading="eager"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b">
    <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">12+</div>
          <div class="text-gray-600">Game Posters</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">25+</div>
          <div class="text-gray-600">Recruiting Graphics</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">2</div>
          <div class="text-gray-600">Seasons Covered</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">1</div>
          <div class="text-gray-600">Bowl Game</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Program Highlights -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Program Highlights</h2>
        <p class="text-lg text-gray-600">Key achievements and memorable projects from my time with Cal Football.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg p-6 text-center shadow-sm">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Big Game Campaign</h3>
          <p class="text-gray-600">Comprehensive visual package for the annual Cal vs Stanford rivalry game.</p>
        </div>
        
        <div class="bg-white rounded-lg p-6 text-center shadow-sm">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Recruiting Success</h3>
          <p class="text-gray-600">Visual content supporting top-tier recruiting classes and commitment announcements.</p>
        </div>
        
        <div class="bg-white rounded-lg p-6 text-center shadow-sm">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Performance Graphics</h3>
          <p class="text-gray-600">Statistical visualizations and award recognition graphics for players and team.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Collections Section -->
  <section id="collections" class="py-16 bg-white">
    <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Collections</h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
          Explore different types of design work created for Cal Football.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
        {categories.map((category) => {
          // Get thumbnail image
          const thumbnail = category.type === 'nested' 
            ? category.data.projects[0]?.subprojects?.[0]?.images?.[0]
            : category.data.projects[0]?.images?.[0];
            
          return (
            <div class="bg-gray-50 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 group">
              <!-- Thumbnail -->
              <div class="relative h-64 lg:h-72 bg-gray-200 overflow-hidden">
                {thumbnail ? (
                  <img 
                    src={thumbnail.src} 
                    alt={thumbnail.alt}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                    <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                )}
                <!-- Overlay for better text contrast -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
              
              <!-- Content -->
              <div class="p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-yellow-600 transition-colors">{category.name}</h3>
                <p class="text-gray-600 mb-6 text-base leading-relaxed">{category.data.description}</p>
                
                <!-- Meta Info -->
                <div class="flex justify-between items-center text-sm text-gray-500 mb-8">
                  <span class="font-medium">2022</span>
                  <span class="bg-yellow-50 text-yellow-600 px-3 py-1 rounded-full font-medium">
                    {category.type === 'nested' 
                      ? `${category.data.projects[0]?.subprojects?.length || 0} subproject${(category.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                      : `${category.data.projects[0]?.images?.length || 0} image${(category.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
                    }
                  </span>
                </div>
                
                <!-- Action Button -->
                <a 
                  href={`#${category.id}`} 
                  class="inline-flex items-center w-full justify-center px-6 py-4 bg-yellow-600 text-white font-semibold rounded-xl hover:bg-yellow-700 transition-all duration-300 group-hover:bg-yellow-700 group-hover:shadow-lg smooth-scroll"
                >
                  View Collection
                  <svg class="ml-2 w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                  </svg>
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Individual Collection Sections -->
  {categories.map((category, index) => (
    <section id={category.id} class={`py-20 ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'} border-t`}>
      <div class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10">
        <!-- Collection Header -->
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-6">{category.name}</h2>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto mb-8 leading-relaxed">
            {category.data.description}
          </p>
          
          <!-- Collection Stats -->
          <div class="inline-flex items-center gap-8 text-gray-500 mb-8">
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              {category.type === 'nested' 
                ? `${category.data.projects[0]?.subprojects?.length || 0} subproject${(category.data.projects[0]?.subprojects?.length || 0) !== 1 ? 's' : ''}`
                : `${category.data.projects[0]?.images?.length || 0} image${(category.data.projects[0]?.images?.length || 0) !== 1 ? 's' : ''}`
              }
            </span>
            <span>•</span>
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              2022
            </span>
          </div>
        </div>
        
        {category.type === 'nested' ? (
          <!-- Full nested collection with subprojects -->
          <div class="space-y-16">
            <!-- Sticky Mini Navigation for Subprojects -->
            <div class="sticky top-0 z-10 bg-white/95 backdrop-blur-sm border-b border-gray-200 py-3 -mt-8 mb-8">
              <div class="flex flex-wrap justify-center gap-3">
                {category.data.projects[0]?.subprojects?.map((subproject) => (
                  <a 
                    href={`#${subproject.title.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '')}`}
                    class="px-4 py-2 bg-yellow-50 text-yellow-700 rounded-full border border-yellow-200 hover:bg-yellow-100 transition-colors text-sm font-medium smooth-scroll"
                  >
                    {subproject.title}
                  </a>
                ))}
              </div>
            </div>

            {category.data.projects[0]?.subprojects?.map((subproject, subIndex) => {
              const subprojectId = subproject.title.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '');
              return (
                <div 
                  id={subprojectId}
                  class={`relative rounded-2xl overflow-hidden ${subIndex % 2 === 0 ? 'bg-slate-50' : 'bg-yellow-50/30'} p-6 lg:p-10 shadow-sm`}
                >
                  <!-- Subproject Header -->
                  <div class="text-center mb-8">
                    <div class="inline-flex items-center gap-4 mb-4">
                      <div class="h-px bg-gradient-to-r from-transparent via-yellow-300 to-transparent flex-1"></div>
                      <span class="text-xs font-medium text-yellow-600 bg-white px-3 py-1 rounded-full border border-yellow-200">
                        {subIndex + 1} of {category.data.projects[0]?.subprojects?.length || 0}
                      </span>
                      <div class="h-px bg-gradient-to-r from-transparent via-yellow-300 to-transparent flex-1"></div>
                    </div>
                    
                    <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">
                      {subproject.title}
                    </h3>
                    
                    <!-- Accent line under title -->
                    <div class="w-20 h-1 bg-gradient-to-r from-yellow-500 to-yellow-600 mx-auto mb-4 rounded-full"></div>
                    
                    {subproject.description && (
                      <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-6 leading-relaxed">
                        {subproject.description}
                      </p>
                    )}
                    
                    <div class="flex items-center justify-center gap-6 text-sm text-gray-500">
                      <span class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        {subproject.images?.length || 0} image{(subproject.images?.length || 0) !== 1 ? 's' : ''}
                      </span>
                      
                      <!-- Quick back to top link -->
                      <span>•</span>
                      <a 
                        href="#collections" 
                        class="flex items-center gap-1 text-yellow-600 hover:text-yellow-700 transition-colors smooth-scroll"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                        </svg>
                        Back to Top
                      </a>
                    </div>
                  </div>

                  <!-- Enhanced Gallery -->
                  <div class="gallery-container">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6">
                      {(subproject.images || []).map((image, imageIndex) => (
                        <div class="group relative aspect-square bg-gray-200 rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 cursor-pointer">
                          <img 
                            src={image.src} 
                            alt={image.alt}
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                            loading="lazy"
                          />
                          <!-- Hover overlay -->
                          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
                            <div class="bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                              View Image
                            </div>
                          </div>
                          <!-- Image number indicator -->
                          <div class="absolute top-3 left-3 bg-black/50 text-white text-xs px-2 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            {imageIndex + 1}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>

                  {subIndex < (category.data.projects[0]?.subprojects?.length || 0) - 1 && (
                    <!-- Section separator -->
                    <div class="absolute -bottom-12 left-1/2 transform -translate-x-1/2">
                      <div class="w-2 h-24 bg-gradient-to-b from-yellow-300 to-transparent rounded-full"></div>
                    </div>
                  )}
                </div>
              );
            })}
          </div>
        ) : (
          <!-- Full flat collection -->
          <div class="bg-slate-50 rounded-2xl p-8 lg:p-12 shadow-sm">
            <div class="gallery-container">
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6">
                {(category.data.projects[0]?.images || []).map((image, imageIndex) => (
                  <div class="group relative aspect-square bg-gray-200 rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 cursor-pointer">
                    <img 
                      src={image.src} 
                      alt={image.alt}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                      loading="lazy"
                    />
                    <!-- Hover overlay -->
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
                      <div class="bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        View Image
                      </div>
                    </div>
                    <!-- Image number indicator -->
                    <div class="absolute top-3 left-3 bg-black/50 text-white text-xs px-2 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      {imageIndex + 1}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}
        
        <!-- Back to Collections -->
        <div class="text-center mt-12 pt-6 border-t border-gray-200">
          <a 
            href="#collections" 
            class="inline-flex items-center px-6 py-3 text-yellow-600 hover:text-yellow-700 font-medium transition-colors smooth-scroll"
          >
            <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
            </svg>
            Back to Collections
          </a>
        </div>
      </div>
    </section>
  ))}

  <!-- Footer CTA -->
  <section class="py-16 bg-gray-900 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Explore More Work</h2>
      <p class="text-xl text-gray-300 mb-8">
        Check out my complete portfolio including SJSU Athletics and other projects.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/work" class="inline-flex items-center px-8 py-4 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors text-lg">
          View All Work
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a href="/work/sjsu-athletics" class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-300 font-semibold rounded-lg hover:border-white hover:text-white transition-colors">
          View SJSU Athletics Work
        </a>
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
          Start a Project
        </a>
      </div>
    </div>
  </section>

  <!-- Smooth Scroll JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add smooth scrolling to all links with smooth-scroll class
      const smoothScrollLinks = document.querySelectorAll('a[href^="#"], .smooth-scroll');
      
      smoothScrollLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          
          const targetId = this.getAttribute('href');
          const targetElement = document.querySelector(targetId);
          
          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    });
  </script>
</Layout>